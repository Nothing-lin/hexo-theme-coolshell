<div class="archive-container">
  <div class="article-header">
    <div class="article-header-container">
      <div class="article-header-title">
        <span><%= '文章归档' %></span>
      </div>

      <div class="article-header-meta">
        <ul>
          <li>
            <div class="datatime"></div>2021年4月16日
          </li>
          <li>
            <div class="author"></div>nothinglin
          </li>
          <li>
            <div class="comment"></div>11条评论
          </li>
          <li>
            <div class="readnumbers"></div>17，096人阅读
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="archive-content">
    <% site.posts.sort('date', 'desc').each(function(e){ %>
    <ul>
      <li>
        <span class="archive-span-date">[<%- date(e.date,"YYYY/MM/DD") %>]</span>
        <strong><a href="<%- url_for(e.path) %>"><%- e.title %></a></strong>
        <span class="archive-span-author">—</span>
        <span><%- e.author %></span>
      </li>
    </ul>
    <% }) %>
  </div>

</div>
